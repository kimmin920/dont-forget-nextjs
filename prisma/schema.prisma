datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     String  @id @default(uuid())
  name   String
  email  String  @unique
  events Event[]

  @@index([email])
}

model Event {
  id    String @id @default(uuid())
  title String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  eventee   Eventee @relation(fields: [eventeeId], references: [id])
  eventeeId String

  startedAt DateTime

  type     EventType
  birthday Birthday?
  greeting Greeting?

  preferences Json?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model Birthday {
  eventId      String       @id
  event        Event        @relation(fields: [eventId], references: [id])
  birthday     DateTime     @db.Date
  calendarType CalendarType
}

model Greeting {
  eventId    String     @id
  event      Event      @relation(fields: [eventId], references: [id])
  repetition Repetition
}

enum Repetition {
  WEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
}

enum CalendarType {
  LUNAR
  SOLAR
}

enum EventType {
  BIRTHDAY
  GREETING
}

model Eventee {
  id          String   @id @default(uuid())
  name        String
  role        String
  event       Event[]
  userId      String
  phoneNumber String   @default("")
  birthday    DateTime @db.Date
}
